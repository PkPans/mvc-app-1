@model mymvc1.Models.Employee.EditEmployeeModel   

<h2>Edit @Model.FirstName @Model.LastName</h2>

<form method="post">
    
    @Html.LabelFor(m => m.FirstName)
    @Html.EditorFor(m => m.FirstName)
    </br>
    @Html.LabelFor(m => m.LastName)
    @Html.EditorFor(m => m.LastName)
    </br>
    @Html.LabelFor(m => m.DateOfBirth)
    @Html.EditorFor(m => m.DateOfBirth)
    </br>
    @Html.LabelFor(m => m.PhoneNumber)
    @Html.EditorFor(m => m.PhoneNumber)
    </br>
    @Html.LabelFor(m => m.CompanyId)
    @Html.DropDownListFor(m => m.CompanyId, Model.AllCompanies.Select(c => new SelectListItem
    {
        Text = c.Name,
        Value = c.Id.ToString(),
        Selected = Model.CompanyId == c.Id
    }))
    </br>
    <button>Save</button>
</form>

<h4>@Html.ActionLink("Go Back","Index","Employee")</h4>